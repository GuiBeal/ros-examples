<launch>
  <arg name="config_path"
    default="$(find-pkg-share my_robot_bringup)/config/my_lifecycle_action_server.yaml"
    description="Path to node config file" />

  <node pkg="my_robot_nodes" exec="my_lifecycle_action_server">
    <param from="$(var config_path)" />
  </node>

  <node pkg="my_robot_nodes" exec="my_lifecycle_manager">
    <param from="$(var config_path)" />
  </node>

  <node pkg="my_robot_nodes" exec="my_action_client" />
</launch>