<launch>
  <arg name="urdf_path"
    default="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf.xacro"
    description="Path to robot URDF file" />
  <arg name="rviz_config_path"
    default="$(find-pkg-share my_robot_description)/config/my_robot.rviz"
    description="Path to rviz config file" />
  <arg name="controllers_config_path"
    default="$(find-pkg-share my_robot_bringup)/config/my_robot_controllers.yaml"
    description="Path to controllers config file" />

  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
  </node>

  <node pkg="controller_manager" exec="ros2_control_node">
    <param from="$(var controllers_config_path)" />
  </node>

  <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
  <node pkg="controller_manager" exec="spawner" args="diff_drive_controller" />
  <node pkg="controller_manager" exec="spawner" args="arm_joints_controller" />

  <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)" />
</launch>